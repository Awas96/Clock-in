{% extends 'layout.html.twig' %}

{% block title %}Entrar en la aplicacion!{% endblock %}

{% block estilos %}
    <link rel="stylesheet" href="{{ asset('css/portada.css') }}">
{% endblock %}

{% block content %}
    <div class="portada mt-3">
        <div class="portada_cuerpo">
            <div class="portada_fondo ">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Por favor, ingrese sus datos</h1>
                    <div>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               autocomplete="email" required autofocus>
                    </div>
                    <div class="pt-3">
                        <label for="inputPassword ">Contraseña</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password"
                               required>
                    </div>
                    <div class="pt-3">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>


                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Recuérdame
                        </label>
                    </div>


                    <div class="mt-3">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Entrar en la Aplicacion
                        </button>
                    </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}
