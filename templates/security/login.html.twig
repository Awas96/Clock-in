{% extends 'layout.html.twig' %}

{% block title %}Entrar en la aplicacion!{% endblock %}

{% block estilos %}
    <link rel="stylesheet" href="{{ asset('css/login_form.css') }}">
{% endblock %}

{% block content %}
    <div class="contenedor">
        <h1 class="text-center login-title">Entrar en la aplicacion</h1>
        <div class="cuerpo">

            <div class="account-wall">
                <img class="form-img"
                     src="{{ asset('img/logo.png') }}"
                     alt="">
                <form method="post" class="form-signin">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a
                                    href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <div class="form-input">
                        <label class="">Usuario</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-input">
                        <label>Contraseña</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password"
                               required>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Entrar
                    </button>
                    <div class="form-input">
                        <label class="checkbox pull-left">
                            <input type="checkbox" name="_remember_me"> Recuérdame

                        </label>
                    </div>
                    <div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
