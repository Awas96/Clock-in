{% extends 'layout.html.twig' %}

{% block estilos %}
    <link rel="stylesheet" href="{{ asset('css/listados.css') }}">
    <link rel="stylesheet" href="{{ asset('css/tabla.css') }}">
    <link rel="stylesheet" href="{{ asset('css/creaTurnos.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/tabla.js') }}"></script>
    <script src="{{ asset('js/creaTurnos.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="container">
        <h1 class="listados_titulo">Turnos Predefinidos</h1>
        <div class="row">
            <div class="col">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div><h3 class="panel-title">Turnos</h3></div>
                        <div class="pull-right">
							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter"
                                  data-container="body">
								<i class="fas fa-filter"></i>
							</span>
                        </div>
                    </div>
                    <div class="panel-body">
                        <input type="text" class="form-control" id="dev-table-filter" data-action="filter"
                               data-filters="#dev-table" placeholder="Filtrar por inicio"/>
                    </div>
                    <div class="panel-table">
                        {% include 'turnos_predefinidos/predefinidos_tabla.partial.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

{% endblock %}

