<table class="table table-hover" id="dev-table">
    <thead class="thead-dark">
    <tr>
        <th>Nif</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Editar</th>
    </tr>
    </thead>
    <tbody class="table-stripped">
    {% for i in usuarios %}
        <tr>
            <td>
                {{ i.nif }}
            </td>
            <td>
                {{ i.email }}
            </td>
            <td>
                {{ i.roles | first }}
            </td>
            <td>
                <button class="btn btn-success"><i class="fas fa-edit"></i></button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>